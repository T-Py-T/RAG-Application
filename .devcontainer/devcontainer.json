// .devcontainer/devcontainer.json
// Configures a dev container matching CI environment for consistent development.
// Not used for production environments.
{
  "name": "rag-app-dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "rag-app",
  "forwardPorts": [3001, 8001],
  "containerEnv": {
    "COMPOSE_PROJECT_NAME": "rag-app"
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": ".devcontainer/setup.sh",
  "postStartCommand": "echo 'Ready to develop! Backend: http://localhost:8001, Frontend: http://localhost:3001'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "python.defaultInterpreterPath": "python3",
        "typescript.preferences.importModuleSpecifier": "relative",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  }
}
